<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name),:html=> {class:'form-horizontal'}) do |f| %>
 <div class="container">    
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
            <div class="panel panel-info" >
                    <div class="panel-heading">
                        <div class="panel-title">Logearse</div>
                        <div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">Ayuda?</a></div>
                    </div>     

                    <div style="padding-top:30px" class="panel-body" >

                        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                            
                        <form id="loginform" class="form-horizontal" role="form">
                                    
                            		<div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
    									<%= f.input :email, :required => true, :autofocus => true, input_html: {class: "form-control"}, :placeholder=>"Correo Electronico" , label: false %>
                                    </div>
                                
                           			<div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                            <%= f.input :password, :required => false, input_html: {class: "form-control"}, label: false, placeholder: "Password" %>

                                    </div>
                                    

                                

                                <div style="margin-top:10px" class="form-group">
                                    <!-- Button -->

                                    <div class="col-sm-2 controls">
                                        <%= f.button :submit, "Entrar" ,:class=>"btn btn-info"  %>


                                    </div>
                                     <div class="col-sm-8 controls">
                                        <%= link_to "Volver al Index" ,root_path ,:class=>"btn btn-warning" %>


                                    </div>
                                </div>


                                <div class="form-group">
                                    <div class="col-md-12 control">
                                        <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                                           Aun no tienes cuenta? <%= render "devise/shared/links" %>

                                        </a>
                                        </div>
                                    </div>
                                </div>    



                        </div>                     
                    </div>  
        </div>
        <% end %>


</div>


